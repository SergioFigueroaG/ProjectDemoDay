<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date i</th>
      <th>Date f</th>
      <th>Hour i</th>
      <th>Hour f</th>
      <th>Name place</th>
      <th>Address</th>
      <th>Img</th>
      <th>Private</th>
      <th>N confirm</th>
      <th>Capacity</th>
      <th>Need partner</th>
      <th>Des partner</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
    <tr>
    <% if can? :read, event %>
      <%= render  "event",{:event => event}%>

      <td><%= link_to 'Show', event %></td>
    <% end %>
    <% if can? :manage, event %>
     <td><%= link_to 'Edit', edit_event_path(event) %></td>
     <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     <%end -%>
   </tr>
   <% end %>
 </tbody>
</table>

<br>
