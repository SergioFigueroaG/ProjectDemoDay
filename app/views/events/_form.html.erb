<%= form_for @event , :html => { :id => "form_event" } do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title ,"Titulo"%><br>
    <%= f.text_field :title ,required:true%>
  </div>
  <div class="field">
    <%= f.label :description,"Descripción" %><br>
    <%= f.text_area :description,required:true %>
  </div>
  <div class="field">
    <%= f.label :date_i,"Fecha Inicio" %><br>
    <%= f.date_select :date_i %>
  </div>
  <div class="field">
    <%= f.label :date_f,"Fecha Fin" %><br>
    <%= f.date_select :date_f %>
  </div>
  <div class="field">
    <%= f.label :hour_i,"Hora Inicio" %><br>
    <%= f.time_select :hour_i,{ampm: true,minute_step: 15} %>
  </div>
  <div class="field">
    <%= f.label :hour_f,"Hora Final" %><br>
    <%= f.time_select :hour_f,{ampm: true,minute_step: 15} %>
  </div>
  <div class="field">
    <%= f.label :name_place,"Lugar" %><br>
    <%= f.text_field :name_place , required:true%>
  </div>
  <div class="field">
    <%= f.label :address ,"Dirección"%><br>
    <%= f.text_field :address , required:true%>
  </div>

   <%= image_tag( urlimg_event(@event), :alt => "rss feed", :id=>"img_prev", height: '200', width: '150') %>
  <div class="field">
    <%= f.label :img %><br>
        <%= f.file_field :img, :class => 'photo_upload' %>
  </div>
  <div class="field">
    <%= f.label :private ,"¿Es privado?" %><br>
    <%= f.check_box :private ,id:"check_inviteds"%>
  </div>
  <div class="field hidden" id="inviteds" >
    <%= f.label :userinviteds %><br>
    <%= f.collection_check_boxes :userinvited_ids, User.all, :id, :name %>
  </div>
  <!-- <div class="field">
    <%= f.label :n_confirm %><br>
    <%= f.number_field :n_confirm %>
  </div> -->
  <div class="field">
    <%= f.label :capacity, "Capacidad" %><br>
    <%= f.number_field :capacity,min:1, required:true %>
  </div>
  <div class="field">
    <%= f.label :need_partner,"¿Necesitas Colaboradores?" %><br>
    <%= f.check_box :need_partner %>
  </div>
  <div class="field hidden" id="descolabora" >
    <%= f.label :des_partner,"Describe que colaboradores necesitas" %><br>
    <%= f.text_area :des_partner %>
  </div>
 <!--  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
  </div> -->
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
